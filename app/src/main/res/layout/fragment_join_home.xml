<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="@string/pressHere">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/offerPref">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_dashboard_black_24dp" />

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="8dp"
                    android:layout_toStartOf="@id/user_image"
                    android:background="#fff"
                    android:fontFamily="@font/medium"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textDirection="rtl"
                    android:textSize="22sp"
                    tools:text="@string/pressHere" />

                <ImageView
                    android:id="@+id/delete_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundBlue"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:background="#FF00DBFF"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="20dp"
                    android:background="#fff"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/money"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/arrowMoney"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#fff"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_arrow_up"
                    android:textAlignment="center"
                    app:backgroundTint="@color/backgroundBlue"
                    app:borderWidth="2dp"
                    app:fabCustomSize="@dimen/design_fab_image_size"
                    app:maxImageSize="24dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/moneySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/medium"
                        android:text="@string/moneyType"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_profit_type"
                        style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:checked="true"
                        android:enabled="false"
                        android:fontFamily="@font/medium"
                        android:text="@string/anotherKind"
                        android:textColor="#000"
                        app:buttonTint="@color/backgroundDarkGreen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/medium"
                        android:text="@string/needMoney"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_availMoney"
                        style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:checked="true"
                        android:enabled="false"
                        android:fontFamily="@font/medium"
                        android:text="@string/avail"
                        android:textColor="#000"
                        app:buttonTint="@color/backgroundDarkGreen" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/money_participant"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ed_moneyIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="end"
                    android:inputType="number"
                    android:text="0" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/contributors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:background="#FF00DBFF"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="top"
                    android:layout_marginEnd="20dp"
                    android:background="#fff"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/contributors"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/arrowContributors"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#fff"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_arrow_up"
                    android:textAlignment="center"
                    app:backgroundTint="@color/backgroundBlue"
                    app:borderWidth="2dp"
                    app:fabCustomSize="@dimen/design_fab_image_size"
                    app:maxImageSize="24dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/contributorsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/gender"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_gender"
                        style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:enabled="false"
                        android:fontFamily="@font/medium"
                        android:gravity="end|center_vertical"
                        android:text="@string/both"
                        android:textColor="#000"
                        app:buttonTint="@color/backgroundDarkGreen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/medium"
                        android:text="@string/numContributors"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=":   "
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        tools:text="52" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/medium"
                    android:text="@string/educationLevelContributors"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.badoualy.stepperindicator.StepperIndicator
                        android:id="@+id/educationLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        app:stpi_circleColor="@color/colorPrimary"
                        app:stpi_circleStrokeWidth="2dp"
                        app:stpi_indicatorColor="@color/colorPrimary"
                        app:stpi_lineDoneColor="@color/colorPrimary"
                        app:stpi_stepCount="4" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:text="@string/basicLevel"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:text="@string/midLevel"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:text="@string/highLevel"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll1"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/projectRequirement"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#fff"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/place"
                        android:textAlignment="center"
                        android:textSize="22sp" />

                    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/arrowPlace"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#fff"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:textAlignment="center"
                        app:backgroundTint="@color/backgroundBlue"
                        app:borderWidth="2dp"
                        app:fabCustomSize="@dimen/design_fab_image_size"
                        app:maxImageSize="24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/placeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center"
                            android:text="@string/neddplace"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_place"
                            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:checked="true"
                            android:enabled="false"
                            android:fontFamily="@font/medium"
                            android:gravity="end|center_vertical"
                            android:text="@string/no"
                            android:textColor="#000"
                            app:buttonTint="@color/backgroundDarkGreen" />
                    </LinearLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            tools:context=".Chart.FinishChart" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/medium"
                            android:text="@string/placeStatus"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_placeState"
                            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_marginBottom="8dp"
                            android:checked="true"
                            android:enabled="false"
                            android:fontFamily="@font/medium"
                            android:text="@string/notAvail"
                            android:textColor="#000"
                            app:buttonTint="@color/backgroundDarkGreen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/medium"
                            android:text="@string/placeKind"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_placeKind"
                            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:checked="true"
                            android:enabled="false"
                            android:fontFamily="@font/medium"
                            android:text="@string/rent"
                            android:textColor="#000"
                            app:buttonTint="@color/backgroundDarkGreen" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#fff"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/experince"
                        android:textAlignment="center"
                        android:textSize="22sp" />

                    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/arrowExperiance"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#fff"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:textAlignment="center"
                        app:backgroundTint="@color/backgroundBlue"
                        app:borderWidth="2dp"
                        app:fabCustomSize="@dimen/design_fab_image_size"
                        app:maxImageSize="24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/experienceSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/medium"
                            android:gravity="center"
                            android:text="@string/needEx"
                            android:textColor="#000"
                            android:textSize="16sp" />


                        <RadioButton
                            android:id="@+id/rb_ex"
                            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:checked="true"
                            android:enabled="false"
                            android:fontFamily="@font/medium"
                            android:text="@string/no"
                            android:textColor="#000"
                            app:buttonTint="@color/backgroundDarkGreen" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/medium"
                        android:text="@string/years_of_experience"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/ed_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:inputType="number"
                        android:paddingEnd="10dp"
                        android:text="0"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/exDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_corner_edit_text"
                        android:fontFamily="@font/medium"
                        android:gravity="end"
                        android:hint="@string/exDes"
                        android:lines="3"
                        android:padding="10dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl2"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/proAttachment"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:id="@+id/attachment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#fff"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/attachment"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/arrowAttachments"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#fff"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:textAlignment="center"
                        app:backgroundTint="@color/backgroundBlue"
                        app:borderWidth="2dp"
                        app:fabCustomSize="@dimen/design_fab_image_size"
                        app:maxImageSize="24dp" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/attachmentSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/doc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_filter" />

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_menu_camera" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recFiles"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    </android.support.v7.widget.RecyclerView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recImages"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    </android.support.v7.widget.RecyclerView>


                    <RelativeLayout
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/preview"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_stairs" />

                        <ImageView
                            android:id="@+id/tv_delete_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_close_clear_cancel" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/cap"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#fff"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/proCapital"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/arrowCapitals"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#fff"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:textAlignment="center"
                        app:backgroundTint="@color/backgroundBlue"
                        app:borderWidth="2dp"
                        app:fabCustomSize="@dimen/design_fab_image_size"
                        app:maxImageSize="24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/CapSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/egypt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:enabled="false"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:text="@string/egypt"
                        android:textColor="#000"
                        app:buttonTint="@color/backgroundDarkGreen" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recCapitals"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/dep"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:background="#fff"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/dep"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/arrowDepartments"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="#fff"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:textAlignment="center"
                        app:backgroundTint="@color/backgroundBlue"
                        app:borderWidth="2dp"
                        app:fabCustomSize="@dimen/design_fab_image_size"
                        app:maxImageSize="24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/DepSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        tools:text="Department" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tags"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"
                        android:background="#FF00DBFF"
                        android:gravity="center_vertical" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tagSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/go"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:fontFamily="@font/medium"
                        android:text="Join"
                        android:textColor="#fff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/accept_reject"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/accept"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:text="@string/accept"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reject"
                        android:fontFamily="@font/medium"
                        android:layout_weight="1"
                        android:text="@string/reject"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>