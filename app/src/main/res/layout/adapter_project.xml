<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_dashboard_black_24dp" />

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/user_image"
                android:gravity="end"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        android:src="@android:drawable/ic_delete"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/medium"
                        android:gravity="start"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:text="مشروع مزرعه دواجن "
                        android:textColor="#000"
                        android:textDirection="rtl"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_placeholder"
                        android:gravity="start|center_vertical"
                        android:fontFamily="@font/medium"
                        android:maxLength="50"
                        android:layout_gravity="start"
                        android:text="مصر - الشرقيه - الزقازيق"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:gravity="start"
                android:orientation="vertical">

                <teamup.rivile.com.teamup.Uitls.TextViewWithArabicDigits
                    android:id="@+id/num_contributer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/medium"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_dd"
                    android:gravity="center"
                    android:maxLength="6"
                    android:text="150"
                    android:textSize="15sp" />

                <teamup.rivile.com.teamup.Uitls.TextViewWithArabicDigits
                    android:id="@+id/num_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/medium"
                    android:drawablePadding="5dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_like"
                    android:gravity="center"
                    android:maxLength="6"
                    android:text="150"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="5"
                android:id="@+id/con"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLength="50"
                    android:fontFamily="@font/medium"
                    android:text="المشاركين فى المشروع"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/project_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:maxLines="4"
            android:paddingEnd="8dp"
            android:gravity="start"
            android:fontFamily="@font/medium"
            android:text="مشروع مزرعه دواجن "
            android:textColor="#000"
            android:textDirection="rtl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/project_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_margin="10dp"
            android:fontFamily="@font/medium"
            android:maxLines="4"
            android:paddingEnd="8dp"
            android:textColor="#2196F3"
            android:textDirection="rtl"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/exten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/medium"
                android:drawableEnd="@drawable/ic_share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="المشاركة" />

            <TextView
                android:id="@+id/make_offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/medium"
                android:drawableEnd="@drawable/ic_chat"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="ارسال عرض" />

            <TextView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:fontFamily="@font/medium"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_favorite_border_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="الإعجاب" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
